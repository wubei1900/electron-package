{
  "name": "electron-package",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "node config/dev-runner.js",
    "build": "node config/build.js && electron-builder",
    "clean": "cross-env BUILD_TARGET=clean node config/build.js"
  },
  "build": {
    "productName": "electron-package",
    "appId": "com.example.yourapp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "dmg": {
      "contents": [{
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "dist/icons/icon.icns",
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "win": {
      "icon": "dist/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "linux": {
      "icon": "dist/icons",
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "installerIcon": "dist/icons/icon.ico",
      "uninstallerIcon": "dist/icons/icon.ico",
      "installerHeaderIcon": "dist/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "electron-package"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "babel-loader": "^8.0.6",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^2.4.5",
    "chalk": "^2.4.2",
    "cross-env": "^5.2.0",
    "del": "^5.1.0",
    "electron": "^7.2.4",
    "electron-builder": "^21.2.0",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^2.2.4",
    "multispinner": "^0.2.1",
    "webpack": "^4.39.2"
  }
}